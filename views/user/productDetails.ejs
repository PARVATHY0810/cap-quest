<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
</head>

    
    <div class="container mt-4">
        <div class="row">
            <% Products.forEach(element => { %>
              <div class="col-md-3 mb-4">
                <div class="card">
                    <form action="product-details">
                        <button class="btn border-none">
                            <img src="/uploads/re-image/<%= element.productImage[1] %>" class="card-img-top product-img" alt="Product Image">
                            <div class="card-body">
                                <input type="hidden" value="<%= element._id %>" name="productId">
                                <h5 class="card-title"><%= element.productName%></h5>
                                <p class="card-text"><del><%= element.regularPrice %></del></p>
                                <p class="card-text"><strong><%= element.salePrice %></strong></p>
                                <a href="#" class="btn btn-primary">View Details</a>
                            </div>
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>
</html>