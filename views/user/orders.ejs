<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order List</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../views/partials/user/header') %>
    <style>
        :root {
            --primary-orange: #ff6200;
            --dark-orange: #e55b00;
            --black: #1a1a1a;
            --light-gray: #f5f5f5;
        }

        body {
            background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
            font-family: 'Georgia', serif;
        }

        .order-list {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        .order-header {
            background-color: var(--black);
            color: white;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .order-item {
            background-color: white;
            padding: 20px;
            border-bottom: 1px solid var(--light-gray);
            transition: all 0.3s ease;
        }

        .order-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .order-item:last-child {
            border-bottom: none;
        }

        .card {
            border: none;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .btn-outline-primary {
            border-color: var(--primary-orange);
            color: var(--primary-orange);
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover {
            background-color: var(--primary-orange);
            color: white;
            border-color: var(--primary-orange);
        }

        h2 {
            color: var(--black);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 3px solid var(--primary-orange);
            padding-bottom: 10px;
        }

        .pagination .page-link {
            color: var(--primary-orange);
            border: none;
            margin: 0 5px;
            border-radius: 4px;
        }

        .pagination .page-item.active .page-link {
            background-color: var(--primary-orange);
            border-color: var(--primary-orange);
            color: white;
        }

        .pagination .page-link:hover {
            background-color: var(--dark-orange);
            color: white;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="order-list">
            <h2 class="mb-4">Order Ledger</h2>
            
            <div class="card">
                <div class="card-body p-0">
                    <!-- Order Header -->
                    <div class="row p-3 order-header">
                        <div class="col-md-2"><strong>Order ID</strong></div>
                        <div class="col-md-2"><strong>Date</strong></div>
                        <div class="col-md-3"><strong>Customer</strong></div>
                        <div class="col-md-2"><strong>Total</strong></div>
                        <div class="col-md-1"><strong>Action</strong></div>
                    </div>
                    
                    <!-- Order Items -->
                    <% orders.forEach(element => { %>
                        <div class="row p-3 order-item">
                            <div class="col-md-2"># <%= element._id %></div>
                            <div class="col-md-2"><%= element.Date %></div>
                            <div class="col-md-3"><%= element.userDetails.name %></div>
                            <div class="col-md-2">$ <%= element.finalAmount %></div>
            
                            <div class="col-md-1"><button class="btn btn-sm btn-outline-primary" onclick="window.location.href='/viewOrder?orderId=<%= element._id %>'">View</button></div>
                        </div>
                    <% }) %>
                    
                    
                </div>
            </div>
            
            <!-- Pagination -->
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>